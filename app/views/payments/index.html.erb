<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title text-center">
      Pricing
    </div> 
    <% if flash[:notice].present? %>
        <div class = "alert alert-warning">
            <p class="error-message"><%= flash[:notice] %></p>
        </div>
    <% end %>
    <div class="section-caption text-center">
        We at ValetBike offer many different options that range various levels. Choose a plan to start your journey!
    </div>
    <div class = "row" id="products">
        <% @products.each do |product| %>
            <%= render "payments/product", product: product %>
        <% end %>
    </div>
    <div class = "row mt-5">
        <div class = "col-lg-3"></div>
        <div class = "col-lg-6">
            <%= image_tag('MHmoney.jpg', class: "section-banner") %>
        </div>
        <div class = "col-lg-3"></div>
    </div>
  </div>
</div>