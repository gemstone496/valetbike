<div class = "col-lg-4" id="<%= dom_id product %>">
    <div class = "step-block medium">
        <h4><%= product.name %></h4>
        <div class = "mt-3 mb-4 d-flex align-items-center justify-content-center">
            <%= button_to("Choose plan", {controller: 'payments', action: 'create'}, 
                        params: {id: product.id}, 
                        remote: true, 
                        data: { turbo: false },
                        class: "custom-btn btn-fill") %>
        </div>
        <p><%= product.desc %></p>
    </div>
</div>