<div class="bg-fill row">
        <div class = "col-lg-4"></div>
        <div class = "col-lg-4">
            <div class="form-container">
                <div class="form-logo">
                    <%= image_tag('logo.png', alt: 'valetbike-logo') %>
                </div>
                <div class="form-title">
                    Reset password
                </div> 
                <div class="form-wrapper">
                    <% if flash[:notice].present? %>
                        <div class = "alert alert-warning">
                            <p class="error-message"><%= flash[:notice] %></p>
                        </div>
                    <% end %>

                    <%= form_with url: password_reset_path do |f| %>
                        <div class = "form-field">
                            <%= f.label :email, "Email" %>
                            <%= f.text_field :email, placeholder: "Enter your email", class: "form-control" %>
                        </div>
                        <%= f.submit "Reset password", class: "mt-3 custom-btn btn-fill" %>
                    <% end %>
                    <%= button_to('Cancel', root_path, class: "mt-3 custom-btn btn-outline", method: :get) %>
                </div>
                <div class="form-links">
                    <p><%= link_to('Sign up', sign_up_path) %></p>
                    <p><%= link_to('Log in', log_in_path) %></p>
                </div>
            </div>
        </div>
        <div class = "col-lg-4"></div>
</div>