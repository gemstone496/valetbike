<div class="page-section flexbox vertical stretch">
  <div class="section-inner flexbox vertical stretch">
    <div class="section-title">
      My account
    </div>

    <% if @user %>
        <%= @user[:email] %>
        
        <%= button_to(
          'Delete account', 
          account_path(@user[:id]), 
          class: "mt-3 custom-btn btn-danger", 
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you wish to delete your account? 
            \nThis action can't be undone." } }) 
        %>
        <%= button_to(
          'Log out', 
          log_out_path, 
          class: "mt-3 custom-btn btn-outline", 
          method: :post, 
          form: { data: { turbo_confirm: "Log Out?" } }) 
        %>
    <% else %>
      <div class="alert alert-warning">
        No account found.
      </div>
    <% end %>

  </div>
</div>
