<div class="record-row flexbox vertical stretch">
  <div class="record-name">
    Station <%= station.identifier %>: <%= station.name %>
    </div>
    <div class="record-details">
        <%= station.address %>
    </div>
    <div class="record-details">
        <%= Bike.where(current_station_id: station.id).length %> available bikes <br>

  <button type="button" data-bs-toggle="modal" data-bs-target="#reserveModal" class="mt-3 custom-btn btn-outline">
    Reserve a Bike
  </button>
    </div>
  <div   class = "modal" id = "reserveModal"
         aria-labelledby="reserveModal"
         aria-hidden="true"
         tabindex="-1">
    <div class = "modal-dialog modal-lg modal-dialog-centered">
      <div class = "modal-content">
        <div class = "modal-header">
          <h5 class="modal-title">Reserve a Bike</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class = "modal-body">
          Reserve a bike from station <%= station.identifier %>?
        </div>
        <div class="modal-footer">
          <button type="button" class="custom-btn btn-outline" data-bs-dismiss="modal">Close</button>
          <%= button_to('Reserve Bike', station_path(station), class: "custom-btn btn-fill", method: :get) %>
        </div>
      </div>
    </div>
  </div>
</div>
